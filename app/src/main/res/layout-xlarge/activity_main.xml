<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.imdhv.blumed.LoginActivity"
    android:background="#EEFF41">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/loginlabel"
        android:layout_height="wrap_content"
        android:text="Please Login!!"
        android:textColor="#8E24AA"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_uid"
        android:text="Username"
        android:textColor="#AD1457"
        android:textSize="30dp"
        android:layout_below="@+id/loginlabel"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uid"
        android:layout_below="@id/label_uid"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_pid"
        android:text="Password"
        android:textColor="#AD1457"
        android:textSize="30dp"
        android:layout_below="@+id/uid"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pid"
        android:layout_below="@id/label_pid"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:inputType="textPassword"
        />
</RelativeLayout>
